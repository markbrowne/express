extends ./../layout

block content
    h1 Edit Car

    form(name="edit_car" method="POST" action="/cars/#{:id}?_method=put")
      p
          label(for="make") Make
          input(type="text" id="make" name="make" value="#{car.make}" required)
      p
          label(for="model") Model
          input(type="text" id="model" name="model" value="#{car.model}" required)
      p
          label(for="model_year") Model Year
          input(type="text" id="model_year" name="model_year"  value="#{car.model}" required)
      p
          input(type="submit"  value="Update")
